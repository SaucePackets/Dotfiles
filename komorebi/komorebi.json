{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.33/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 10,
  "default_container_padding": 10,
  "border": true,
  "border_width": 8,
  "border_offset": -1,
  "animation": {
    "style": "EaseOutExpo",
    "enabled": true
  },
  "theme": {
    "palette": "Base16",
    "name": "CatppuccinMocha",
    "unfocused_border": "Base03",
    "bar_accent": "Base0D"
  },
  "stackbar": {
    "height": 40,
    "mode": "OnStack",
    "tabs": {
      "width": 300
    }
  },
  "bar_configurations": [
    "$Env:KOMOREBI_CONFIG_HOME/komorebi.bar.1.json"
  ],
  "monitors": [
    {
      "workspaces": [
        {
          "name": "1",
          "layout": "UltrawideVerticalStack"
        },
        {
          "name": "2",
          "layout": "UltrawideVerticalStack"
        },
        {
          "name": "3",
          "workspace_rules": [
            {
              "kind": "Exe",
              "id": "OUTLOOK.EXE",
              "matching_strategy": "Equals"
            },
            {
              "kind": "Class",
              "id": "Qt5152QWindowIcon",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "4",
          "layout": "UltrawideVerticalStack"
        },
        {
          "name": "5",
          "layout": "UltrawideVerticalStack"
        },
        {
          "name": "6",
          "layout": "UltrawideVerticalStack"
        },
        {
          "name": "7",
          "layout": "UltrawideVerticalStack"
        }
      ]
    }
  ],
  "ignore_rules": [
    {
      "kind": "Exe",
      "id": "UiPath.Studio.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "UiPath.Studio.Project.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Exe",
      "id": "UiExplorer.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Class",
      "id": "Qt5152QWindowIcon",
      "matching_strategy": "Equals"
    }
  ],
  "tray_and_multi_window_applications": [
  //  {
  //    "kind": "Class",
  //    "id": "Qt5152QWindowIcon",
  //    "matching_strategy": "Equals"
  //  }
  ],
  "floating_applications": [
    {
      "kind": "Exe",
      "id": "OUTLOOK.EXE",
      "matching_strategy": "Equals"
    }
  ]
}
